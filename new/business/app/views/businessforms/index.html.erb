
<% @businessforms.each do |businessform| %>
  Name: <%= businessform.name %><br/><br/>
  Street: <%= businessform.street %><br/><br/>
  State: <%= businessform.state %><br/><br/>
  Postcode: <%= businessform.postcode %><br/><br/>
  Website: <%= businessform.website %><br/><br/>
  Country: <%= businessform.country %><br/><br/>
  City: <%= businessform.city %><br/><br/>
  Phone: <%= businessform.phone %><br/><br/>
  Category: <%= businessform.category %><br/><br/>
  Description: <%= businessform.description %><br/><br/>

  <%- if user_signed_in? %>
    <%= link_to "Delete information", businessform_path(businessform), :date => {:confirm => "Are your sure ?"}, :method => :delete %>
  <% else %>
  <%= link_to " ", businessform_path(businessform) %>
    <% end %>

    <%= category.name if @businessform.present? %>

  <br/><hr><hr>

  <% end %>

  <%= will_paginate @businessforms %>
